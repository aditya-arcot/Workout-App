{
    "name": "workout-app",
    "private": true,
    "scripts": {
        "prettier": "prettier . --write",
        "format:py": "uv run --project server ruff format server",
        "format": "npm run prettier && npm run format:py",
        "lint": "uv run --project server ruff check server --fix"
    },
    "lint-staged": {
        "*.py": [
            "uv run --project server ruff check --fix",
            "uv run --project server ruff format"
        ],
        "*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "sort-package-json": "^3.5.1"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "npm-check-updates": "^19.2.0",
        "prettier": "3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-toml": "2.0.6"
    }
}
